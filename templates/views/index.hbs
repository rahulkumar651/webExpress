 <html lang="en">

<head>
  {{>headerlinks}}
</head>

<body>
   {{>navbar}}

    <!----main header-->
    <div class="container-fluide main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to weather app</p>
                        <h1>Get the Lastest </span class="text_clr">Weather</span> Info of your city</h1>
                        <a href="/weather"><button>check Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active" data-bs-interval="10000">
                                <img src="img/malaria-symptomes.webp" class="d-block w-100" alt="First slide">
                              </div>
                              <div class="carousel-item" data-bs-interval="2000">
                                <img src="img/rainy.jpeg" class="d-block w-100" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img src="img/logo.png" class="d-block w-100" alt="Third slide">
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>  
        </div>  
    </div> 
    
    <!--footer-->
    {{>footer}}
   
</body>

</html>